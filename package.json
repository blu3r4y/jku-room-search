{
  "name": "jku-room-search",
  "version": "0.1.0",
  "description": "Search for free rooms on the campus of the Johannes Kepler University Linz",
  "main": "dist/index.html",
  "scripts": {
    "build": "npm run build-ts && npm run build-static",
    "build-ts": "tsc",
    "build-static": "copy-and-watch \"src/public/**/*\" dist",
    "watch": "concurrently \"npm run watch-ts\" \"npm run watch-static\"",
    "watch-ts": "tsc --watch",
    "watch-static": "copy-and-watch \"src/public/**/*\" dist --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blu3r4y/jku-room-search.git"
  },
  "author": "Mario Kahlhofer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/blu3r4y/jku-room-search/issues"
  },
  "homepage": "https://github.com/blu3r4y/jku-room-search#readme",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "copy-and-watch": "^0.1.2",
    "typescript": "^3.4.1"
  }
}
